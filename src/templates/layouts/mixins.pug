mixin gallery__item (image, title)
    .gallery__item
        .gallery__img
            a(href='#')
                img(src='../img/gallery/' + image)
        h4.gallery__title= title

mixin news__item (dateInner, dateOuter, title)
    .news__item.small-8.small-offset-2
        time(datetime= dateInner).news__date= dateOuter
        a(href='#' data-value= title).news__link= title
            svg(
                width="22"
                height="13"
                viewBox="0 0 22 13"
                xmlns="http://www.w3.org/2000/svg").news__arrow
                path(d="M20.988 6.003h-20M14.993.011l6 6.003-5.994 5.997")
mixin footer__link (title)
    a(href='#').footer__link= title